{
  "name": "root",
  "private": true,
  "devDependencies": {
    "husky": "^4.3.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "pyright": "1.1.181"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --write"
    ],
    "**/*.py": [
      "python3 -m pipenv run isort",
      "python3 -m pipenv run black"
    ]
  },
  "dependencies": {}
}
