{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=7.5.0",
    "npm": ">=99"
  },
  "scripts": {
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.7.1",
    "pyright": "1.1.354",
    "typescript": "~5.4.3",
    "typescript-eslint": "^7.5.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --write"
    ],
    "**/*.py": [
      "scripts/pipenv run isort",
      "scripts/pipenv run black"
    ]
  },
  "overrides": {
    "react-error-overlay": "6.0.9"
  }
}
