{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/api-client",
    "packages/react-components",
    "packages/rmf-models"
  ],
  "scripts": {},
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,scss}": [
      "prettier --write"
    ],
    "**/*.py": [
      "python3 -m pipenv run isort",
      "python3 -m pipenv run black"
    ]
  },
  "dependencies": {
    "socket.io-client": "^3.1.3"
  }
}
